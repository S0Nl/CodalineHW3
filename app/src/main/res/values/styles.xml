<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyButtonSmall" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlHighlight">@color/blue</item>
        <item name="colorButtonNormal">@color/indigo</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="MyButtonNormal" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorButtonNormal">@color/green</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="MyButtonBig" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlHighlight">@color/red</item>
        <item name="colorButtonNormal">@color/yellow</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:fontFamily">casual</item>
    </style>



    <style name="EditText1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText2" parent="EditText1" >
        <item name="android:textSize">@dimen/text_size_big2x</item>
        <item name="android:background">@color/indigo</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="EditText3" parent="EditText1" >
        <item name="android:layout_margin">30dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_big3x</item>
    </style>



    <style name="TextView1">
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width"> wrap_content</item>
    </style>

    <style name="TextView2" parent="TextView1">
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_big2x</item>
        <item name="android:fontFamily">serif</item>
    </style>

    <style name="TextView3" parent="TextView1">
        <item name="android:textColor">@color/indigo</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:fontFamily">serif-monospace</item>
    </style>

</resources>
